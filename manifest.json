{
  "manifest_version": 3,
  "name": "X Checked Badge",
  "version": "1.0",
  "description": "Mark profiles on X/Twitter that you checked.",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "*://*.x.com/*",
    "*://*.twitter.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.x.com/*",
        "*://*.twitter.com/*"
      ],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "x-trust-stamp@ottim.github.io",
      "update_url": "https://raw.githubusercontent.com/Nigtim0/X-Trust-Stamp/refs/heads/main/updates.json"
    }
  }
}
