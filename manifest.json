{
  "manifest_version": 3,
  "name": "X Checked Badge",
  "version": "1.0",
  "description": "Mark profiles on X/Twitter that you checked.",
  "permissions": [
    "storage"
  ],
  "host_permissions": ["*://*.x.com/*","*://*.twitter.com/*"],
  "content_scripts": [
    {
      "matches": ["*://*.x.com/*","*://*.twitter.com/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
